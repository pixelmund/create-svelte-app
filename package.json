{
  "name": "@pixelmund/create-svelte-app",
  "version": "1.0.4",
  "description": "Bootstrap your next svelte/sapper application. Choose typescript, sass or any preprocessor. Webpack or Rollup.",
  "main": "dist/index.js",
  "bin": {
    "create-svelte-app": "./dist/index.js",
    "csa": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "csa": "ts-node ./src/index.ts",
    "build": "npm run prebuild&& tsc && npm run copy",
    "prebuild": "rimraf ./dist",
    "copy": "node copy-templates.js",
    "prepublish": "npm run build"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "keywords": [
    "svelte",
    "sapper",
    "cli",
    "create-svelte-app",
    "svelte-boilerplate",
    "svelte webpack",
    "svelte typescript",
    "sapper typescript",
    "sapper webpack",
    "sapper boilerplate",
    "svelte cli",
    "sapper cli"
  ],
  "author": "Pixelmund",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^7.3.0",
    "@types/lodash": "^4.14.159",
    "@types/mri": "^1.1.0",
    "@types/node": "^14.0.27",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "mri": "^1.1.6"
  }
}
